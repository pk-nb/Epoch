{div, p, h1, hr, a} = React.DOM

EventPanel = React.createClass
  displayName: 'EventPanel'

  tryRenderRepo: (event) ->
    if event.event_type == 'Repo'
      repo = event.repo_event
      div null,
        p null,
          "Repository: #{repo.repository}"
        p null,
          "Author: #{repo.author}"
        a {href: repo.html_url, target: "_blank"},
          'View on Github'

  render: ->
    event = @props.selectedEvent
    div className: 'panel',
      h1 null,
        event.title
      p null,
        event.content
      p null,
        "Start date: #{event.start_date_pretty}"
      p null,
        "End date: #{event.end_date_pretty}"
      @tryRenderRepo(event)


@.EpochUI ?= {}
@.EpochUI.EventPanel = EventPanel
